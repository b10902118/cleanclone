{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2023"],
    "types": ["node"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": false,
    "jsx": "react-jsx"
  },
  "include": ["*.ts", "**/*.ts", "*.tsx", "**/*.tsx"],
  "exclude": ["node_modules", "tmp", "dist"]
}
