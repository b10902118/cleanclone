{
  "manifest_version": 3,
  "name": "Selected NodeID Debugger",
  "version": "1.0",
  "description": "Uses chrome.debugger to get the nodeId of the selected element ($0) in DevTools.",
  "permissions": ["activeTab", "debugger"],
  "host_permissions": ["<all_urls>"],
  "devtools_page": "devtools.html",
  "icons": {
    "128": "icons/128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
